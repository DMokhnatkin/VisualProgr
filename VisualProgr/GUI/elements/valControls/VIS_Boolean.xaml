<UserControl x:Class="VisualProgr.GUI.elements.valControls.VIS_Boolean"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             mc:Ignorable="d"
             Name="BooleanControl">
    <Grid >
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="Auto"/>
            <ColumnDefinition Width="Auto"/>
        </Grid.ColumnDefinitions>
        <CheckBox Name="BoolCheckBox" HorizontalAlignment="Center" Height="15" VerticalAlignment="Center" 
                  IsEnabled="{Binding ElementName=BooleanControl, Path=CanBeEdited}"
                  IsChecked="{Binding ElementName=BooleanControl, Path=BindingVal, Mode=TwoWay}"/>
        <TextBlock HorizontalAlignment="Center" Margin="2,0,2,0" TextWrapping="Wrap"
                   VerticalAlignment="Center" Grid.Column="1" Text="{Binding ElementName=BoolCheckBox, Path=IsChecked}"
                   Foreground="{Binding ElementName=BooleanControl, Path=Foreground}"/>
    </Grid>
</UserControl>
