<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:elements="clr-namespace:VisualProgr.GUI.elements">
    <Style x:Key="Default" TargetType="elements:WPF_Node">
        <Style.Triggers>
            <Trigger Property="NodeSelected" Value="true">
                <Setter Property="TopBarBrush">
                    <Setter.Value>
                        <SolidColorBrush Color="Purple"></SolidColorBrush>
                    </Setter.Value>
                </Setter>
            </Trigger>
            <Trigger Property="NodeSelected" Value="false">
                <Setter Property="TopBarBrush">
                    <Setter.Value>
                        <SolidColorBrush Color="Black"></SolidColorBrush>
                    </Setter.Value>
                </Setter>
            </Trigger>
        </Style.Triggers>
    </Style>
</ResourceDictionary>